@model FrontendProject.Models.Enrollment

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<div class="row">

    <div class="col-xl-9 col-lg-6">


        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <h4>Enrollment</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.EnrollmentID)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.EnrollmentID)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CourseID)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CourseID)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.StudentID)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.StudentID)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Grade)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Grade)
                        </dd>
                    </dl>

                    <input type="submit" value="Delete" class="btn btn-danger" data-toggle="modal" data-target="#Modal" /> 

                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-9 col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <a class="btn btn-danger" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

<!-- Modal-->
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Apakah Anda Yakin Untuk Menghapus ?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Pilih Delete Jika Ingin Menghapus.</div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
