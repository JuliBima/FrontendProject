@model IEnumerable<FrontendProject.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List Course</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <p>
                <a class="btn btn-primary" asp-action="Create">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.EnrollmentID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CourseID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StudentID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Grade)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EnrollmentID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Grade)
                            </td>
                            <td>
                                <a class="btn btn-success" asp-action="Update" asp-route-id="@item.EnrollmentID">Update</a> &nbsp;
                                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.EnrollmentID">Details</a> &nbsp;
                                <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.EnrollmentID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
           

